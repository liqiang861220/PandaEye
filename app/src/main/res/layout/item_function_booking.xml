<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:background="@color/green_2dcca9"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_desk_name"
        android:textColor="@color/black_414040"
        android:textSize="18dp"
        android:text="测试功能"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_desk_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_desk"
            />
        <TextView
            android:id="@+id/tv_desk_status"
            android:textColor="@color/grey_text_5d5c5c"
            android:textSize="16dp"
            android:text="测试功能"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</LinearLayout>