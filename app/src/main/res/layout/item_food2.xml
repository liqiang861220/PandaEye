<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_classify_shape"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/black_414040"
                android:maxLines="1"

                android:text="小蔥拌豆腐"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black_414040"
                    android:text="¥15"/>
                <TextView
                    android:id="@+id/tv_min_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:padding="1dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tv_rounded_corners_black"
                    android:text="3份起"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_remove_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/yp"
                android:background="@drawable/bg_shape_classify_shape"/>
            <ImageView
                android:id="@+id/iv_add_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yn"
                android:background="@drawable/bg_shape_classify_shape"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_size"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="15"
        android:padding="2dp"
        android:textSize="13dp"
        android:gravity="center"
        android:background="@drawable/bg_circle_red"
        android:textColor="@color/white"/>

</RelativeLayout>